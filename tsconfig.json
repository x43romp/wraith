{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2018",
        "jsx": "preserve",
        "sourceMap": true,
        // output
        "outDir": "dist",
        "removeComments": true,
        "resolveJsonModule": true,
    },
    "include": [
        "src"
    ],
    "compileOnSave": true,
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}
